<h1><%= t('headers.new_ingredient') %></h1>
<p>Find me in app/views/ingredients/new.html.erb</p>

<%= form_for @ingredient do |f| %>
  <div class="form-group">
    <%= f.label :name, t('labels.name') %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('placeholders.ingredient_name') %>
  </div>

  <div class="form-group">
    <%= f.label :calories, t('labels.calories') %>
    <%= f.text_field :calories, class: 'form-control', placeholder: t('placeholders.ingredient_name') %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
